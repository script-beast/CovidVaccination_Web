<% layout('/layouts/boilerplate') -%>
    <div class="container mt-3 ">
        <div id="carouselExampleFade" class="carousel slide rounded carousel-fade bg-dark" data-bs-ride="carousel">
            <div class="carousel-inner bg-dark">
                <% for (let i=0; i < 50; i++) { %>
                    <div class=" rounded carousel-item <%= i == 0 ? 'active':'' %>">
                        <div class="card bg-dark rounded">
                            <div class="row bg-dark rounded text-white p-3">
                                <div class="col-md-5">
                                    <img class="card-img rounded" style="height: 15rem;" src="<%= data[i].media %>"
                                        alt="https://images.unsplash.com/photo-1586009123393-0121baae8057?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1935&q=80">
                                </div>
                                <div class="col-md-7 ">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= data[i].title.substr(0,70) %>
                                        </h5>
                                        <p class="card-text">
                                            <%=data[i].summary.substr(0, 400)%>...
                                        </p>
                                        <a href="<%=data[i].link%>" class="btn btn-primary">Read More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }%>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <br><br><br>
    <div class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col-md-1"></div>
        <div class="col col-md-4">
            <div class="card bg-dark rounded">
                <div class="card-body bg-dark">
                    <h5 class="card-title">India : </h5>
                    <p class="card-text">Get a graphical representation</p>
                    <a href="/stats/Total" class="btn btn-info">Go</a>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col col-md-4">
            <div class="card bg-dark rounded">
                <div class="card-body bg-dark">
                    <h5 class="card-title">All States: </h5>
                    <p class="card-text">Get a graphical representation</p>
                    <a href="/stats/allctry" class="btn btn-info">Go</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/javascr/statsChart.js"></script>